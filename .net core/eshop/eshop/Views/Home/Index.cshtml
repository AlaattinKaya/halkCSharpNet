@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model)
    {
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <img src="@product.ImageUrl" alt="">
                        <h3>@product.Name</h3>
                        <p>@product.Description</p>
                        <p>@product.Price</p>
                    </div>
                </div>
            </div>
    }
</div>
